@prefix tom: <https://w3id.org/toRoll/vocs/taginOM/>> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

tom: a skos:ConceptScheme ;
    dct:title "test vocabulary with hierarchy"@en, "testvok mit Hierarchie"@de ;
    skos:hasTopConcept tom:violet, tom:green, tom:blue .

tom:violet a skos:Concept ;
    skos:prefLabel "Violett"@de, "violet"@en ;
    skos:altLabel "Lila"@de, "purple"@en ;
    skos:topConceptOf tom: .

tom:green a skos:Concept ;
    skos:prefLabel "green"@en, "Grün"@de ;
    skos:narrower tom:grassgreen ;
    skos:topConceptOf tom: .
    
tom:grassgreen a skos:Concept ;
    skos:prefLabel "grass-green"@en, "Grasgrün"@de ;
    skos:inScheme tom: .

tom:blue a skos:Concept ;
    skos:prefLabel "blue"@en, "blau"@de; 
    skos:topConceptOf tom: .
